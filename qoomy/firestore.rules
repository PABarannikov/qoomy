rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;

      // roomReads subcollection - tracks when user last read a room's chat
      match /roomReads/{roomCode} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // roomReveals subcollection - tracks which rooms user has revealed answer for
      match /roomReveals/{roomCode} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rooms collection
    match /rooms/{roomCode} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.hostId || 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']));
      allow delete: if request.auth != null && request.auth.uid == resource.data.hostId;

      // Players subcollection
      match /players/{playerId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == playerId;
        allow update: if request.auth != null;
        allow delete: if request.auth != null &&
          (request.auth.uid == playerId ||
           request.auth.uid == get(/databases/$(database)/documents/rooms/$(roomCode)).data.hostId);
      }

      // Chat subcollection
      match /chat/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null &&
          request.auth.uid == get(/databases/$(database)/documents/rooms/$(roomCode)).data.hostId;
        allow delete: if request.auth != null &&
          request.auth.uid == get(/databases/$(database)/documents/rooms/$(roomCode)).data.hostId;
      }
    }

    // Teams collection
    match /teams/{teamId} {
      // Anyone authenticated can read teams (needed for invite code lookup)
      allow read: if request.auth != null;
      // Only authenticated users can create teams
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
      // Owner can update anything, others can only add themselves to memberIds
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.ownerId ||
         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberIds']) &&
          request.auth.uid in request.resource.data.memberIds));
      // Only owner can delete team
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;

      // Members subcollection
      match /members/{memberId} {
        allow read: if request.auth != null;
        // User can add themselves (joining) or owner can add members
        allow create: if request.auth != null &&
          (request.auth.uid == memberId ||
           request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId);
        // Owner can update members
        allow update: if request.auth != null &&
          request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId;
        // User can remove themselves or owner can remove members
        allow delete: if request.auth != null &&
          (request.auth.uid == memberId ||
           request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.ownerId);
      }
    }

    // Collection group rules for players (for userJoinedRoomsStream query)
    match /{path=**}/players/{playerId} {
      allow read: if request.auth != null;
    }

    // Collection group rules for chat (for stats queries)
    match /{path=**}/chat/{messageId} {
      allow read: if request.auth != null;
    }

    // Games collection
    match /games/{roomCode} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == get(/databases/$(database)/documents/rooms/$(roomCode)).data.hostId;

      // Questions subcollection
      match /questions/{questionId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && 
          request.auth.uid == get(/databases/$(database)/documents/rooms/$(roomCode)).data.hostId;

        // Answers subcollection
        match /answers/{playerId} {
          allow read: if request.auth != null;
          allow create, update: if request.auth != null && request.auth.uid == playerId;
          allow update: if request.auth != null &&
             request.auth.uid == get(/databases/$(database)/documents/rooms/$(roomCode)).data.hostId;
          allow delete: if request.auth != null &&
            (request.auth.uid == playerId ||
             request.auth.uid == get(/databases/$(database)/documents/rooms/$(roomCode)).data.hostId);
        }
      }
    }
  }
}
